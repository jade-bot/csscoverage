extends layout

block content
  div#homepage
    div.hero-unit
      h1 CSSCoverage
    form.add-urls(method="POST", action="/run")
      if (error)
        p.error= error
      h2 Enter Urls:
      textarea(name='urls')
      button.btn(type='submit') Go!
    div.previous-runs
      h2 Previous Runs:
      ul
        each run in runs
          li
            a(href="results/#{run.id}") #{run.domain} 
            span #{relativeDate(run.date)}

block scripts
  script
    $('form.add-urls').on('submit', function() {
      var urls = $('textarea').val();
      localStorage.setItem('urls', urls);
    });

    var urls = localStorage.getItem('urls');
    if (urls)
      $('textarea').val(urls);
